  <div class="flex-grow-1 mb-3">
    <%= f.input :content,
                label: false,
                as: :text,
                input_html: {
                  class: "form-control rounded-3 shadow",
                  rows: 2,
                  placeholder: "Ã‰cris ton message pour Moody...",
                  style: "background-color: #0c1929; color: #FFFFFF; border: 1px solid #9963b8;"
                } %>
  </div>
  <%= f.submit "Envoyer", class: "btn", style: "background-color: #f23263; color: #FFFFFF; border-radius: 1.5rem; padding: 0.5rem 1.5rem;",
