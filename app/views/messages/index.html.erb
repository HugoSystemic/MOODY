<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary"><%= @chat.title %> - Conversation ðŸ’¬</h1>
    <%= link_to 'Voir la playlist finale', chat_path(@chat), class: 'btn btn-outline-success' %>
  </div>

  <div class="card p-3 mb-4 chat-history" style="max-height: 500px; overflow-y: scroll;">
    <% if @messages.any? %>
      <% @messages.each do |message| %>
        <%= render 'message_bubble', message: message %>
      <% end %>
    <% else %>
      <p class="text-muted">Commencez la conversation en envoyant votre premier message...</p>
    <% end %>
  </div>

  <%# Formulaire d'envoi de nouveau message %>
  <%= render 'form', chat: @chat, message: @message %>
</div>
