<h1>Mes Musiques Favorites</h1>
<hr>

<% if @favorite_musics.any? %>
  <div class="list-group">
    <% @favorite_musics.each do |music| %>
      <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1"><%= music.title %></h5>
          <small class="text-muted">Humeur: <%= music.mood %></small>
          <%# Vous pouvez aussi afficher la vidéo ou le lien vers la musique %>
          <% if music.video_url.present? %>
             <p class="mb-0"><%= link_to "Regarder la vidéo", music.video_url, target: "_blank" %></p>
          <% end %>
        </div>
        <span class="badge bg-primary rounded-pill"><%= music.duration_minutes %> min</span>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info" role="alert">
    Vous n'avez pas encore de musiques favorites.
  </div>
<% end %>

<%= link_to "Retour au profil", profile_path, class: "btn btn-outline-secondary mt-3" %>
