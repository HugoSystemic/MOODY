<div class="container mt-5" style="max-width: 700px;">
  <h1 class="mb-4 text-center">Mon Profil</h1>

  <div class="card shadow-sm p-4 mb-4">
    <h4 class="card-title mb-3">Informations de base</h4>

    <p class="mb-1">
      <strong>Email :</strong> <%= current_user.email %>
    </p>

    <div class="mt-3 text-center">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(resize_to_fill: [120, 120]), class: "rounded-circle mb-3" %>
      <% else %>
        <p>Aucune photo de profil pour le moment</p>
      <% end %>
    </div>

    <div class="mt-3 text-center">
      <%= link_to "Modifier mon mot de passe", edit_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Paramètres du compte", settings_profile_path, class: "btn btn-secondary" %>
    <%= link_to "Retour à l'accueil", root_path, class: "btn btn-outline-primary" %>
  </div>
</div>
