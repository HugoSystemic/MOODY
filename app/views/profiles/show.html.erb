<div class="profile-container">
  <h1>Mon Profil</h1>

  <div class="profile-card">
    <h4 class="card-title">Informations de base</h4>

    <p>
      <strong>Email :</strong> <%= current_user.email %>
    </p>

    <div class="avatar-container">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(resize_to_fill: [120, 120]), class: "rounded-circle" %>
      <% else %>
        <p>Aucune photo de profil pour le moment</p>
      <% end %>
    </div>

    <div class="profile-actions">
      <%= link_to "Modifier mon mot de passe", edit_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>

  <div class="profile-navigation">
    <%= link_to "Paramètres du compte", settings_profile_path, class: "btn btn-secondary" %>
    <%= link_to "Retour à l'accueil", root_path, class: "btn btn-outline-primary" %>
  </div>
</div>
