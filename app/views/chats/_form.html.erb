    <%= f.input :content,
                label: "Votre message pour Moody",
                as: :text,
                input_html: {
                  class: "form-control",
                  rows: 3,
                  placeholder: "Ã‰crivez votre message...",
                  data: {
                    controller: "auto-resize",
                    action: "input->auto-resize#resize"
                  }
                } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" do %>
