<div class="container chats-container">
  <div class="profile-card" style="max-width: 600px; margin: 0 auto;">
    <h2 class="card-title">Créer un nouveau chat</h2>

    <%= form_with model: @chat, local: true, html: { class: "simple_form" } do |f| %>
      <div class="form-group">
        <%= f.label :title, "Titre de la session", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Entrez un titre pour votre session" %>
      </div>

      <div class="form-actions" style="display: flex; gap: 1rem; justify-content: flex-end; flex-wrap: wrap;">
        <%= f.submit "Créer", class: "btn btn-primary" %>
        <%= link_to "Annuler", chats_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
