<div class="container mt-5">
  <h2 style="color: #ffffff;"><%= @chat.title %></h2>

  <div class="chat-history card p-3 mb-4" style="background-color: #0c1929; max-height: 500px; overflow-y: auto;">
    <% @messages.each do |message| %>
      <%= render 'messages/message_bubble', message: message %>
    <% end %>
  </div>

  <%= render 'form', chat: @chat, message: @message %>
</div>
