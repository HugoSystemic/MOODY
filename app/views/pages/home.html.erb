<div class="container d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 90vh;">
  <div class="mb-4 d-flex gap-3">
    <div style="width: 18px; height: 18px; border-radius: 50%; background:#ff7676;"></div>
    <div style="width: 18px; height: 18px; border-radius: 50%; background:#ffd76d;"></div>
    <div style="width: 18px; height: 18px; border-radius: 50%; background:#6cd4ff;"></div>
    <div style="width: 18px; height: 18px; border-radius: 50%; background:#9b6cff;"></div>
  </div>

  <h1 class="fw-bold mb-3">MOODY</h1>
  <p class="text-secondary mb-4">Trouve la musique qui correspond Ã  ton mood.</p>

  <%= form_with model: @chat, url: chats_path, local: true, class: "d-flex flex-column gap-2" do |f| %>
    <%= f.hidden_field :title, value: "Nouvelle session" %>
    <%= f.text_area :message_content, placeholder: "Quel est ton mood du moment !", name: "message[content]", class: "form-control", style: "width: 500px; display: block; margin: 0 auto;" %>
    <%= f.submit "Commencer", class: "btn btn-primary btn-lg px-4 rounded-pill mt-2" %>
  <% end %>
</div>
