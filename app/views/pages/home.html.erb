<div class="home-container">
  <div class="home-logo">
    <%= image_tag "logo_moody.png", alt: "Moody Logo", height: "200", class: "rounded-circle border border-white" %>
  </div>

  <p class="home-tagline">Trouve la vidéo qui correspond à ton mood.</p>

  <%= form_with model: @chat, url: chats_path, local: true, class: "home-form" do |f| %>
    <%= f.hidden_field :title, value: "Nouveau chat" %>

    <div class="form-group">
      <%= f.text_area :message_content,
          placeholder: "Quel est ton mood du moment ?",
          name: "message[content]",
          class: "form-control form-control-lg text-center no-scrollbar" %>
    </div>

    <div class="form-group">
      <%= f.submit "Commencer", class: "btn btn-primary btn-lg btn-submit" %>
    </div>
  <% end %>
</div>
